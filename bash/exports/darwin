#--------------------------------------------------
#  OSX-specific exports    
#--------------------------------------------------
export PATH=/Applications/MAMP/bin/apache2/bin:/Applications/MAMP/bin/php5/bin:$PATH:/opt/local/bin:/opt/local/sbin:/Developer/Android/tools
export MANPATH=$MANPATH:/opt/local/man
export EVENT_NOKQUEUE=1

#--------------------------------------------------
#  Create the socket for SSHKeychain if it 
#  doesn't already exist
#--------------------------------------------------
if [ -e "/tmp/${UID}/SSHKeychain.socket" ];
then
  export SSH_AUTH_SOCK="/tmp/${UID}/SSHKeychain.socket"
fi

#--------------------------------------------------
#  Bash completion stuff for OS X
#--------------------------------------------------
if [ -f /opt/local/etc/bash_completion ]; then
    . /opt/local/etc/bash_completion
fi