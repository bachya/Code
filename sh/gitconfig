########################################################
#----------------- GIT CONFIG TEMPLATE ----------------#
########################################################

[alias]
  all = add -A
	ci = commit
	co = checkout
	mg = merge
	pp = !git pull -- && git push --
	st = status
	unstage = reset HEAD --
	who = shortlog -s --
	rmdel = !git ls-files -d | xargs git rm --ignore-unmatch
	undo = !git reset --hard && git rmdel && git clean -fq
[push]
	default = matching
[color]
	ui = true
