########################################################
#----------------- GIT CONFIG TEMPLATE ----------------#
########################################################

[alias]
	ci = commit
	co = checkout
	mg = merge
	pp = !git pull -- && git push --
	st = status
	unstage = reset HEAD --
	who = shortlog -s --
	rmdel = !git ls-files --deleted | xargs git rm --ignore-unmatch
	undo = !git reset --hard && git rmdel && git clean -f
[push]
	default = matching
[color]
	ui = true
